@model UsersViewModel
@{
    ViewData["Title"] = "Users";
}

        <p></p>
        <div class="container my-container">
            <div class="row">
                <div class="col-lg-12">
                </div>
            </div>
            <div class="tableHeader row">
                <div class="col-lg-1">Nr.</div>
                <div class="col-lg-3">Username: (click name to edit)</div>
                <div class="col-lg-2">Name:</div>
                <div class="col-lg-1">Birthdate:</div>
                <div class="col-lg-3">Email:</div>
                <div class="col-lg-1">Roles:</div>
                <div class="col-lg-1">&nbsp;</div>
            </div>
@{
            string rowclass;

            int count = Model.Users.Count;
            for (int i = 0; i < count; i++)
            {
                var item = Model.Users[i];

                int rowClassIndex = (i % 2);
                rowclass = Model.TableRowClasses[rowClassIndex];

            <div class="@rowclass row">
                <div class="col-lg-1">@(i + 1)</div>
                <div class="col-lg-3"><a href="/Users/EditUser?id=@item.Id">@item.UserName</a></div>
                <div class="col-lg-2">@item.Name</div>
                <div class="col-lg-1">@item.BirthDate</div>
                <div class="col-lg-3">@item.Email</div>
                <div class="col-lg-1">@item.RolesString</div>
                <div class="col-lg-1">
                @if (item.UserName != User.Identity.Name)
                {
                    <a href="/Users/DeleteUser?id=@item.Id">Delete</a>
                }
                </div>
            </div>
            }
}
            <div class="tableFooter row">
                <div class="col-lg-10">&nbsp;</div>
                <div class="col-lg-2">@count item(s)</div>
            </div>
        </div>

