@using Microsoft.AspNetCore.Identity
@using React.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="headerUl">
            <li class="headerLi">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User) logged in</a>
            </li>
            <li class="headerLi">
                <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
            </li>
        </ul>
    </form>
} else
{
    <ul class="headerUl">
        <li class="headerLi"><a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="/Home/People">Register</a></li>
        <li class="headerLi"><a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="/Home/People">Login</a></li>
    </ul>
}
